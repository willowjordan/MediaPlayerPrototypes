<UserControl x:Class="MediaPlayerPrototype2_SQLInteroperability.View.UserControls.DatabaseRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayerPrototype2_SQLInteroperability.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="1920">
    <Grid Background="LightGray">
        <Button Content="Delete" Height="40" Width="80" HorizontalAlignment="Right" Margin="100, 0, 5, 0" Background="LightPink" FontSize="16" Click="Button_Click"/>
        <TextBlock Text="{Binding ID}" VerticalAlignment="Center" FontSize="24" Margin="5, 0, 0, 0"/>
        <Line X1="80" Y1="0" X2="80" Y2="50" Stroke="Black" StrokeThickness="3"/>
        <TextBlock Text="{Binding ItemName}" VerticalAlignment="Center" FontSize="24" Margin="90, 0, 0, 0"/>
        <Line X1="0" Y1="0" X2="1920" Y2="0" Stroke="Black" StrokeThickness="3"/>
        <Line X1="0" Y1="50" X2="1920" Y2="50" Stroke="Black" StrokeThickness="3"/>
    </Grid>
</UserControl>
